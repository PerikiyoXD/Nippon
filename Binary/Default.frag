#version 450 core

///////////////////////////////////////////////////////////
// Fragment Inputs
///////////////////////////////////////////////////////////

layout (location = 0) in Vertex
{
	vec3 Position;
	vec2 Uv;
	vec4 Color;
} vertex;

///////////////////////////////////////////////////////////
// Fragment Outputs
///////////////////////////////////////////////////////////

layout (location = 0) out vec4 OutputColor;

///////////////////////////////////////////////////////////
// Sampler
///////////////////////////////////////////////////////////

layout (binding = 0) uniform sampler2D SamplerAlbedo;

///////////////////////////////////////////////////////////
// Entry point
///////////////////////////////////////////////////////////

void main()
{
	vec4 color = vec4(0.0, 0.0, 0.0, 1.0);

	color = texture(SamplerAlbedo, vertex.Uv);

	OutputColor = color;
}