#version 450 core

///////////////////////////////////////////////////////////
// Fragment Inputs
///////////////////////////////////////////////////////////

layout (location = 0) in Vertex
{
  vec3 Position;
  vec2 Uv;
  vec4 Color;
} vertex;

///////////////////////////////////////////////////////////
// Fragment Outputs
///////////////////////////////////////////////////////////

layout (location = 0) out vec4 OutputColor;

///////////////////////////////////////////////////////////
// Uniforms
///////////////////////////////////////////////////////////

layout (binding = 0) uniform sampler2D uAlbedo;

///////////////////////////////////////////////////////////
// Entry point
///////////////////////////////////////////////////////////

void main()
{
  OutputColor = texture(uAlbedo, vertex.Uv);
}